{
  "name": "reveal-multi",
  "version": "1.0.3",
  "description": "Generate multiple reveal.js slides from multiple directories",
  "repository": {
    "type": "git",
    "url": "https://github.com/zerkalica/reveal-multi"
  },
  "bin": {
    "reveal-multi": "bin/reveal-multi"
  },
  "config": {
    "builddir": "."
  },
  "scripts": {
    "prepare": "npm run build",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "clean": "rm -rf $npm_package_config_builddir/dist",
    "start": "babel-node src/index.js",
    "build": "npm run clean && babel src --ignore=__tests__ --source-maps --out-dir $npm_package_config_builddir/dist",
    "lint": "eslint .",
    "check": "flow check",
    "test": "flow check"
  },
  "keywords": [
    "reveal.js",
    "screen",
    "presentation"
  ],
  "files": [
    "*.map",
    "*.js",
    "*.flow",
    ".flowconfig",
    "README.md",
    "LICENSE",
    "src",
    "rgs",
    "bin",
    "examples",
    "flow-typed",
    "dist"
  ],
  "author": "Stefan Zerkalica <zerkalica@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "connect": "^3.6.2",
    "debug": "^2.6.8",
    "find-root": "^1.0.0",
    "flow-bin": "^0.48.0",
    "fs-extra": "^3.0.1",
    "highlight.js": "^9.12.0",
    "middleware-static-livereload": "0.0.4",
    "reveal.js": "^3.5.0",
    "serve-static": "^1.12.3",
    "socket.io": "^2.0.3",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-syntax-decorators": "^6.13.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "husky": "^0.14.1"
  }
}
